{
  "name": "loop",
  "version": "1.0.0",
  "description": "Loop",
  "author": "Loop",
  "private": true,
  "main": "dist/main/index.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"pnpm dev:main\" \"pnpm dev:renderer\" \"pnpm dev:db\" \"pnpm dev:electron\"",
    "dev:renderer:turbopack": "cd src/renderer && next dev --turbo -p 4000",
    "dev:main": "cross-env NODE_ENV=development tsc -p tsconfig.main.json --watch",
    "dev:renderer": "cd src/renderer && next dev --turbo -p 4000",
    "dev:db": "prisma studio",
    "dev:electron": "wait-on --timeout 60000 --interval 3000 --window 3000 http://localhost:4000 && cross-env NODE_ENV=development electron .",
    "build": "pnpm build:clean && pnpm build:main && pnpm build:renderer",
    "build:main": "tsc --build tsconfig.main.json --force",
    "build:renderer": "cd src/renderer && next build",
    "build:clean": "rimraf dist out .next",
    "start": "pnpm build && electron .",
    "start:prod": "cross-env NODE_ENV=production electron .",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --fix --max-warnings=10",
    "lint:check": "eslint . --max-warnings=10",
    "lint:quiet": "eslint . --quiet",
    "lint:strict": "eslint . --max-warnings=0",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "tsc --noEmit && tsc -p tsconfig.main.json --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "pack": "pnpm build && electron-builder --dir",
    "dist": "pnpm build && electron-builder",
    "dist:mac": "pnpm build && electron-builder --mac",
    "dist:win": "pnpm build && electron-builder --win",
    "dist:linux": "pnpm build && electron-builder --linux",
    "publish": "pnpm build && electron-builder --publish=always",
    "clean": "rimraf dist out .next node_modules/.cache",
    "clean:all": "rimraf dist out .next node_modules",
    "postinstall": "electron-builder install-app-deps && pnpm db:generate",
    "debug:main": "cross-env NODE_ENV=development electron --inspect=5858 .",
    "debug:renderer": "cross-env NODE_ENV=development next dev",
    "debug:test": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "analyze": "cross-env ANALYZE=true next build",
    "bundle-analyzer": "npx @next/bundle-analyzer"
  },
  "dependencies": {
    "@codemirror/lang-markdown": "^6.3.3",
    "@codemirror/language-data": "^6.5.1",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.0",
    "@prisma/client": "^6.10.1",
    "@tiptap/extension-bubble-menu": "^2.24.0",
    "@tiptap/extension-character-count": "^2.24.2",
    "@tiptap/extension-color": "^2.24.2",
    "@tiptap/extension-focus": "^2.24.2",
    "@tiptap/extension-image": "^2.24.0",
    "@tiptap/extension-link": "^2.24.0",
    "@tiptap/extension-placeholder": "^2.24.0",
    "@tiptap/extension-text-align": "^2.24.2",
    "@tiptap/extension-text-style": "^2.24.2",
    "@tiptap/extension-typography": "^2.24.0",
    "@tiptap/extension-underline": "^2.24.0",
    "@tiptap/react": "^2.24.0",
    "@tiptap/starter-kit": "^2.24.0",
    "@tiptap/suggestion": "^2.25.0",
    "@uiw/codemirror-extensions-basic-setup": "^4.23.14",
    "@uiw/react-codemirror": "^4.23.14",
    "active-win": "8.2.1",
    "axios": "^1.10.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "codemirror": "^6.0.2",
    "dotenv": "^17.0.0",
    "electron-store": "^8.1.0",
    "highlight.js": "^11.11.1",
    "lucide-react": "0.263.1",
    "next": "15.3.4",
    "node-mac-permissions": "^2.5.0",
    "prisma": "^6.10.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.3.1",
    "uiohook-napi": "1.5.4",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^2.1.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "28.3.3",
    "electron-builder": "^26.0.12",
    "electron-mock-ipc": "^0.3.12",
    "electronmon": "^2.0.3",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-next": "15.3.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^30.0.3",
    "postcss": "^8.5.6",
    "rimraf": "^6.0.1",
    "spectron": "^19.0.0",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5",
    "wait-on": "^8.0.3"
  },
  "packageManager": "pnpm@10.12.4+sha512.5ea8b0deed94ed68691c9bad4c955492705c5eeb8a87ef86bc62c74a26b037b08ff9570f108b2e4dbd1dd1a9186fea925e527f141c648e85af45631074680184"
}
